{
  "manifest_version": 3,
  "name": "Auto RTL Direction for GPT Composer",
  "version": "1.0",
  "description": "Detects Hebrew or Arabic input in GPT Composer and sets text direction automatically.",
  "author": "Gal Nahum",
  "homepage_url": "https://www.linkedin.com/in/galnahum/",
  "incognito": "spanning",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
